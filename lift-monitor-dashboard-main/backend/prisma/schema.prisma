generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  password          String
  name              String
  role              String   @default("user")  // admin, user
  panelLogPrivileges String[] @default(["view"])  // view, create, edit, delete for HT/LT panel logs
  serviceLogPrivileges String[] @default(["view"])  // view, create, edit, delete for operator/service logs
  assignedBuildings String[] @default([])  // empty means all buildings (for admin)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("users")
  @@index([username])
}

model PanelLog {
  id        Int      @id @default(autoincrement())
  building  String
  date      String
  time      String
  panelType String
  htPanel   Json?
  ltPanel   Json?
  powerFailure Json?
  shiftIncharge Json?
  remarks   String?
  lastUpdatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([building, date, time])
  @@map("panel_logs")
  @@index([building, date, panelType])
}

model ServiceLog {
  id                Int       @id @default(autoincrement())
  sno               String
  building          String
  date              String
  time              String
  natureOfCall      String
  workDescription   String
  status            String    @default("open")
  username          String
  lastUpdatedBy     String?
  lastUpdatedAt     DateTime?
  changeDescription String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relation to history
  history           ServiceLogHistory[]

  @@map("service_logs")
  @@index([building, date, status, username])
}

model ServiceLogHistory {
  id                Int        @id @default(autoincrement())
  serviceLogId      Int
  serviceLog        ServiceLog @relation(fields: [serviceLogId], references: [id], onDelete: Cascade)
  changeType        String     // "created", "status_change", "nature_change", "description_change"
  changeDescription String     // e.g., "Status: open â†’ closed"
  changedBy         String
  changedAt         DateTime   @default(now())
  oldValue          String?
  newValue          String?

  @@map("service_log_history")
  @@index([serviceLogId, changedAt])
}

model EmailLog {
  id             Int      @id @default(autoincrement())
  building       String
  recipientEmail String
  subject        String
  status         String   // "sent", "failed", "pending"
  messageId      String?
  errorMessage   String?
  sentAt         DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("email_logs")
  @@index([building, sentAt])
  @@index([status, sentAt])
}

model EmailQueue {
  id             Int      @id @default(autoincrement())
  building       String
  date           String
  status         String   @default("pending") // pending, processing, sent, failed, skipped
  attempts       Int      @default(0)
  messageId      String?
  errorMessage   String?
  createdAt      DateTime @default(now())
  completedAt    DateTime?
  updatedAt      DateTime @updatedAt

  @@map("email_queue")
  @@index([status])
  @@index([building])
  @@index([date])
  @@index([createdAt])
}
