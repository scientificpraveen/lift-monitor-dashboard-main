generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
  @@index([email])
}

model PanelLog {
  id        Int      @id @default(autoincrement())
  building  String
  date      String
  time      String
  panelType String
  htPanel   Json?
  ltPanel   Json?
  powerFailure Json?
  shiftIncharge String?
  remarks   String?
  lastUpdatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("panel_logs")
  @@index([building, date, panelType])
}

model ServiceLog {
  id        Int      @id @default(autoincrement())
  sno       String
  date      String
  time      String
  natureOfCall String
  workDescription String
  status    String   @default("open")
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("service_logs")
  @@index([date, status, username])
}
