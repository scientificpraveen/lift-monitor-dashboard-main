generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  password          String
  name              String
  role              String   @default("user")  // admin, user
  panelLogPrivileges String[] @default(["view"])  // view, create, edit, delete for HT/LT panel logs
  serviceLogPrivileges String[] @default(["view"])  // view, create, edit, delete for operator/service logs

  assignedBuildings String[] @default([])  // empty means all buildings (for admin)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("users")
  @@index([username])
}

model PanelLog {
  id        Int      @id @default(autoincrement())
  building  String
  date      String
  time      String
  panelType String
  htPanel   Json?
  ltPanel   Json?
  powerFailure Json?
  shiftIncharge Json?
  remarks   String?
  lastUpdatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relation to shift incharge history
  shiftInchargeHistory ShiftInchargeHistory[]

  @@unique([building, date, time])
  @@map("panel_logs")
  @@index([building, date, panelType])
}

model ShiftInchargeHistory {
  id            Int       @id @default(autoincrement())
  panelLogId    Int
  panelLog      PanelLog  @relation(fields: [panelLogId], references: [id], onDelete: Cascade)
  verifiedBy    String    // Name of the person who verified
  verifiedAt    DateTime  @default(now())
  shiftData     Json      // Store the shift incharge data that was set

  @@map("shift_incharge_history")
  @@index([panelLogId, verifiedAt])
}

model ServiceLog {
  id                Int       @id @default(autoincrement())
  sno               String
  building          String
  date              String
  time              String
  natureOfCall      String
  workDescription   String
  status            String    @default("open")
  username          String
  lastUpdatedBy     String?
  lastUpdatedAt     DateTime?
  changeDescription String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relation to history
  history           ServiceLogHistory[]

  @@map("service_logs")
  @@index([building, date, status, username])
}

model ServiceLogHistory {
  id                Int        @id @default(autoincrement())
  serviceLogId      Int
  serviceLog        ServiceLog @relation(fields: [serviceLogId], references: [id], onDelete: Cascade)
  changeType        String     // "created", "status_change", "nature_change", "description_change"
  changeDescription String     // e.g., "Status: open â†’ closed"
  changedBy         String
  changedAt         DateTime   @default(now())
  oldValue          String?
  newValue          String?

  @@map("service_log_history")
  @@index([serviceLogId, changedAt])
}

model EmailLog {
  id             Int      @id @default(autoincrement())
  building       String
  recipientEmail String
  subject        String
  status         String   // "sent", "failed", "pending"
  messageId      String?
  errorMessage   String?
  sentAt         DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("email_logs")
  @@index([building, sentAt])
  @@index([status, sentAt])
}

model EmailQueue {
  id             Int      @id @default(autoincrement())
  building       String
  date           String
  status         String   @default("pending") // pending, processing, sent, failed, skipped
  attempts       Int      @default(0)
  messageId      String?
  errorMessage   String?
  createdAt      DateTime @default(now())
  completedAt    DateTime?
  updatedAt      DateTime @updatedAt

  @@map("email_queue")
  @@index([status])
  @@index([building])
  @@index([date])
  @@index([createdAt])
}

// --- GUARD TOURING SYSTEM ---

model GuardDataMapping {
  id        Int      @id @default(autoincrement())
  tagId     String   @unique
  building  String
  location  String
  floor     String
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @updatedAt @db.Timestamp(0)

  @@map("guard_data_mapping")
  @@index([building])
}

model GuardTouringLog {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamp(0)
  name      String
  building  String
  location  String
  floor     String
  createdAt DateTime @default(now()) @db.Timestamp(0)

  @@map("guard_touring_log")
  @@index([building, timestamp])
}

// --- FIRE LOG SYSTEM ---

model FireDataMapping {
  id        Int      @id @default(autoincrement())
  tagId     String   @unique
  building  String
  location  String
  floor     String
  type      String   // "Hose Reel Hose", "Fire Hydrant cabinet", "External Yard Hydrant"
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @updatedAt @db.Timestamp(0)

  @@map("fire_data_mapping")
  @@index([building])
}

model FireQuestion {
  id        Int      @id @default(autoincrement())
  building  String
  type      String   // "Hose Reel Hose", "Fire Hydrant cabinet", "External Yard Hydrant"
  question  String
  option1   String?
  option2   String?
  option3   String?
  createdAt DateTime @default(now()) @db.Timestamp(0)
  updatedAt DateTime @updatedAt @db.Timestamp(0)

  @@map("fire_questions")
  @@index([type])
}

model FireLogEntry {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now()) @db.Timestamp(0)
  userName  String
  building  String
  location  String
  floor     String
  type      String
  answers   Json     // Stores questions and answers as JSON: { "q1": "YES", "q2": "NO" } or array
  remarks   String?
  createdAt DateTime @default(now()) @db.Timestamp(0)

  @@map("fire_log_entry")
  @@index([building, timestamp])
  @@index([type])
}
